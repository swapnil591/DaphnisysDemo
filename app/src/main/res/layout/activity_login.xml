<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/parent_padding"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="@dimen/title_padding"
        android:text="Login Using FigerprintAuth"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
      />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/fing_img_width"
        android:layout_height="@dimen/fing_img_height"
        android:layout_gravity="center_horizontal"
        app:srcCompat="@drawable/ic_fingerprint_black_24dp"
     />

    <TextView
        android:id="@+id/textViewHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text=""
        />


</LinearLayout>